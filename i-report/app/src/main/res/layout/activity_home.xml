<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miagao.i_report.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mainlogo"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSubText"
        android:background="@drawable/text"
        android:layout_marginTop="40dp"
        android:layout_height="40dp"
        android:layout_width="120dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSubCall"
        android:background="@drawable/call"
        android:layout_height="40dp"
        android:layout_width="120dp"
        android:layout_below="@+id/btnSubText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/btnSubImage"
        android:background="@drawable/photo"
        android:layout_height="40dp"
        android:layout_width="120dp"
        android:layout_below="@+id/btnSubCall"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btnSubVideo"
        android:background="@drawable/video"
        android:layout_height="40dp"
        android:layout_width="120dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/btnSubImage"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSubSettings"
        android:background="@drawable/settings"
        android:layout_width="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_height="30dp" />

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sign Out"
        android:id="@+id/button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/activity_vertical_margin"
        android:nestedScrollingEnabled="true"
        android:textSize="12sp"
        android:minWidth="40dip"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnSubSettings" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/miagao4"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
