<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hotline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miagao.i_report.HotlineActivity">


    <Button
        android:background="@drawable/home"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/btnHotlineHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mainlogo"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/emergency"
        android:id="@+id/imageView3"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/btnHotlineHome"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnH911"
        android:background="@drawable/e911"
        android:layout_height="50dp"
        android:layout_width="130dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="43dp" />

    <Button
        android:id="@+id/btnH888"
        android:background="@drawable/e8888"
        android:layout_height="50dp"
        android:layout_width="130dp"
        android:layout_below="@+id/btnH911"
        android:layout_alignStart="@+id/btnH911" />

    <Button
        android:id="@+id/btnHPolice"
        android:background="@drawable/police"
        android:layout_height="50dp"
        android:layout_width="130dp"
        android:layout_below="@+id/btnH888"
        android:layout_alignStart="@+id/btnH888" />

    <Button
        android:id="@+id/btnHFire"
        android:background="@drawable/fire"
        android:layout_height="50dp"
        android:layout_width="130dp"
        android:layout_below="@+id/btnH888"
        android:layout_alignStart="@+id/btnHPolice"
        android:layout_marginTop="52dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/miagao4"
        android:id="@+id/imageView6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
