<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miagao.i_report.SMSActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mainlogo"
        android:layout_marginTop="41dp"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_alignParentTop="true" />

    <Button
        android:background="@drawable/home"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnSMSHome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextmySMS"
        android:layout_marginTop="124dp"
        android:hint="Type message here."
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:inputType="text|textMultiLine"
        style="@android:style/Widget.Holo.Light.ImageButton" />

    <Button
        android:id="@+id/btnSMSSend"
        android:background="@drawable/send_button1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/editTextmySMS"
        android:layout_alignEnd="@+id/editTextmySMS"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/miagao4"
        android:id="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
